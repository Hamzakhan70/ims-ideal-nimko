# Railway Environment Variables
# Copy this to .env for local development
# You can also create .env.development / .env.staging / .env.production

# Runtime Environment
APP_ENV=development

# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/ideal-nimko

# For production, use MongoDB Atlas or Railway's MongoDB addon
# Example: MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ideal-nimko

# JWT Secret Key
JWT_SECRET=replace_with_a_strong_secret

# JWT Expiry
JWT_EXPIRES_IN_ADMIN=24h
JWT_EXPIRES_IN_USER=1h

# Server Port (Railway will set this automatically)
PORT=5000

# Node Environment
NODE_ENV=development

# CORS Origins (comma-separated)
# Example: CORS_ORIGINS=https://your-app-name.vercel.app,https://www.your-domain.com
CORS_ORIGINS=http://localhost:5173

# Cloudinary Configuration
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
